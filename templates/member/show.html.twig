{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ member.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ member.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ member.password }}</td>
            </tr>
        </tbody>
    </table>
    {% if physicalTrait %}
        <a href="{{ path('app_physical_traits_show', {'id': physicalTrait.id}) }}">Afficher vos traits physiques</a>
    {% else %}
        <a href="{{ path('app_physical_traits_new') }}">Créer vos traits physiques</a>
    {% endif %}

    <a href="{{ path('app_member_edit', {'id': member.id}) }}">Éditer</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
