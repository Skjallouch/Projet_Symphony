<body>
{% include 'fragments/header.html.twig' %}

<main class="mt-3">
    {% block body %}{% endblock %}
</main>

{% include 'fragments/footer.html.twig' %}

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init();
</script>

<!-- bouton pour aller au top de la page-->

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<button onclick="topFunction()" id="myBtn" title="Go to top"
        style="position: fixed; bottom: 20px; right: 20px; z-index: 99; font-size: 18px; border: none; outline: none; background-color: #afa4ce; color: white; cursor: pointer; padding: 15px; border-radius: 50%; opacity: 0.6;">
    <i class="fas fa-arrow-up"></i>
</button>

<script>
    window.onscroll = function () {
        scrollFunction()
    };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            document.getElementById("myBtn").style.display = "block";
        } else {
            document.getElementById("myBtn").style.display = "none";
        }
    }
    // Btn rest at the bottom even when we scroll
    function topFunction() {
        document.body.scrollTop = 0; // For Safari
        document.documentElement.scrollTop = 0;
    }
</script>


</body>
</html>

